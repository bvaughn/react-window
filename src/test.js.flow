import * as React from 'react';
import {
  FixedSizeList,
  VariableSizeList,
  FixedSizeGrid,
  VariableSizeGrid,
} from './';

type ItemData = {
  num: number,
  str: string,
};

const assertVoid = (value: void) => {};
const assertEmpty = (value: empty) => {};
const assertNumber = (value: number) => {};
const assertString = (value: string) => {};
const assertCustomType = (value: ItemData) => {};

/* FixedSizeList */

{
  const Item = ({ index, style }) => {
    (index: number);
    (style: Object);
    return null;
  };
  <FixedSizeList width={0} height={0} itemSize={0} itemCount={0}>
    {Item}
  </FixedSizeList>;
}

{
  const Item = ({ data }) => {
    assertNumber(data);
    // $FlowFixMe number is passed to FixedSizeList
    assertString(data);
    return null;
  };
  const itemKey = (index, data) => {
    assertNumber(data);
    // $FlowFixMe expected
    assertString(data);
    return index;
  };
  <FixedSizeList
    width={0}
    height={0}
    itemSize={0}
    itemCount={0}
    itemData={1}
    itemKey={itemKey}
  >
    {Item}
  </FixedSizeList>;
}

{
  const Item = ({ data }) => {
    assertCustomType(data);
    // $FlowFixMe ItemData is passed to FixedSizeList
    assertString(data);
    return null;
  };
  const itemKey = (index, data) => {
    assertCustomType(data);
    // $FlowFixMe expected
    assertString(data);
    return index;
  };
  <FixedSizeList
    width={0}
    height={0}
    itemSize={0}
    itemCount={0}
    itemData={{
      num: 123,
      str: 'abc',
    }}
    itemKey={itemKey}
  >
    {Item}
  </FixedSizeList>;
}

{
  const Item = ({ data }) => {
    assertVoid(data);
    // $FlowFixMe itemData is undefined by default
    assertEmpty(data);

    return null;
  };
  const itemKey = (index, data) => {
    assertVoid(data);
    // $FlowFixMe expected
    assertString(data);
    return index;
  };
  <FixedSizeList
    width={0}
    height={0}
    itemSize={0}
    itemCount={0}
    itemKey={itemKey}
  >
    {Item}
  </FixedSizeList>;
}

